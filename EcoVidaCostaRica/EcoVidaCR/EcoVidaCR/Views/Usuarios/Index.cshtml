@model IEnumerable<EcoVidaCR.Models.Usuarios>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="fondoDestinos">
<h1 class="text-center">Lista de usuarios</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success">[+]Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rol)
            </th>
            <th>
                Acciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rol)
            </td>
            <td>
                <button class="btn btn-primary">
                      @Html.ActionLink("Editar", "Edit", new { id=item.idUsuario },new {@class="text-decoration-none text-light"})
                </button>
                |
                <button class="btn btn-info">
                      @Html.ActionLink("Detalles", "Details", new { id=item.idUsuario },new {@class="text-decoration-none text-light"})
                </button>
                 |
                 <button class="btn btn-danger">
                      @Html.ActionLink("Eliminar", "Delete", new { id=item.idUsuario },new {@class="text-decoration-none text-light"})
                 </button>
                 
                     @*   @Html.ActionLink("Edit", "Edit", new { id=item.idUsuario }) |
                        @Html.ActionLink("Details", "Details", new { id=item.idUsuario }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.idUsuario })*@
               </td>
                 
                            
                            
        </tr>
}
    </tbody>
</table>
</body>